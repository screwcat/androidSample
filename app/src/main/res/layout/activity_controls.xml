<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fxjwsq.taiji.com.sample.ControlsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/llRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/census_register_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/spinner_sjcj_personnel_message1" />

            <TextView
                android:id="@+id/changeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="24dp"
                android:textStyle="bold"
                tools:textColor="@color/blue" />

            <RadioGroup
                android:id="@+id/rgEffective"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/effective"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:checked="true"
                    android:text="有效信息" />

                <RadioButton
                    android:id="@+id/invalid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="无效信息" />

                <RadioButton
                    android:id="@+id/wrongPosition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="位置错误" />

            </RadioGroup>

            <EditText
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请填写姓名" />

            <Button
                android:id="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击按钮" />

            <ImageView
                android:id="@+id/imgClick"
                android:layout_width="89dp"
                android:layout_height="120dp"
                android:layout_margin="20dp" />

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开关" />

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RatingBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <DatePicker
                android:layout_width="317dp"
                android:layout_height="315dp"
                android:tooltipText="日期"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"></DatePicker>

            <TimePicker
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tooltipText="时间"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"></TimePicker>
        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>
