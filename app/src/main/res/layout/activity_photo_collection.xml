<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fxjwsq.taiji.com.sample.PhotoCollectionActivity">


    <GridView
        android:id="@+id/gvTaskPic"
        android:layout_width="fill_parent"
        android:layout_height="180dp"
        android:layout_margin="20dp"
        android:padding="2dp"
        android:background="#C2DBFF"
        android:columnWidth="80dp"
        android:gravity="center"
        android:horizontalSpacing="0dp"
        android:numColumns="4"
        android:stretchMode="columnWidth"
        android:verticalSpacing="0dp"/>

    <Switch
        android:id="@+id/switchCompress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="是否压缩图片"
        app:layout_constraintStart_toStartOf="@+id/gvTaskPic"
        app:layout_constraintTop_toBottomOf="@+id/gvTaskPic" />
    .


</android.support.constraint.ConstraintLayout>
